extends layout

block content
  .row.banner
    .col-12
      h1= pageHeader.title
      small &nbsp;#{pageHeader.strapline}

  .row
    .col-12.col-md-8
      each destination in destinations
        .card
          .card-block
            h4
              a(href=`/destination/${destination.name}`)= destination.name
            .description
              | #{destination.description}
